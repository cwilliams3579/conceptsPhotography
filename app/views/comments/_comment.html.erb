
<!--Section: Comments list-->
<section class="wow fadeIn" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeIn;">

  <!--Main wrapper-->
  <div class="comments-list">
    <div class="section-heading">
      <h1>Comments <span class="badge white-text grey-gradient"><%= @post.comments.count %></span></h1>
    </div>
    <!--First row-->
    <% @comments.each do |comment| %>
      <div class="row">
        <!--Image column-->
        <div class="col-sm-2 col-12">
          <img src="https://mdbootstrap.com/img/Photos/Avatars/img%20(17).jpg">
        </div>
        <!--/.Image column-->

        <!--Content column-->
        <div class="col-sm-10 col-12">
          <a><h3 class="white-text"><%= comment.user.full_name.titleize %> </h3></a>

          <div class="card-data">
            <ul>
              <li class="comment-date"><i class="fa fa-clock-o white-text"></i>
                <%= time_ago_in_words(comment.created_at) %>
              </li>
            </ul>
          </div>

          <p class="comment-text"><%= simple_format(comment.content) %></p>
        </div>
        <!--/.Content column-->
        <%= link_to '', posts_path(@post.comments), method: :delete, data: {confirm: 'Are you sure?', class: "fa fa-trash text-danger"} %>
      </div>
      <!--/.First row-->
    <% end %>

  </div>
  <!--/.Main wrapper-->

</section>
<!--/Section: Comments list-->


<!--Section: Leave a reply (Logged In User)-->
<section class="wow fadeIn" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeIn;">

  <!--Leave a reply form-->
  <div class="reply-form">
    <h1 class="section-heading">Leave a reply </h1>
    <p class="text-center">(<%= current_user.first_name.capitalize %>)</p>

    <!--Third row-->
    <div class="row">
      <!--Image column-->
      <div class="col-sm-2 col-12">
        <%= image_tag current_user.image.url, class: "img-fluid" if current_user.image? %>
      </div>
      <!--/.Image column-->

    </div>
    <!--/.Third row-->
  </div>
  <!--/.Leave a reply form-->

</section>
<!--/Section: Leave a reply (Logged In User)-->
