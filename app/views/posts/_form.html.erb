<div class="container">
  <%= form_with(model: post, multiple: true, local: true) do |f| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="md-form">
      <%= f.label :title %>
      <%= f.text_field :title, id: :post_title, autofocus: true, class: "form-control" %>
    </div>

    <div class="md-form">
      <%= f.label :content %>
      <%= f.text_area :content, id: :post_content, class: "md-textarea" %>
    </div>

    <div class="md-form">
      <i class="fa fa-camera-retro prefix fa-fonts"></i>
      <%= image_tag(@post.image_url) if @post.image? %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
      
    </div>

    <div class="md-form">
      <%= f.label :user_id %>
      <%= f.text_field :user_id, id: :post_user_id %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</div>
