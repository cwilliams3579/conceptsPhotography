<div class="col-md-4 mx-auto p-top">
  <div class="card grey-gradient white-text">
    <div class="card-block">
      <div class="form-header grey-gradient">
        <i class="fa fa-book fa-2x"></i>
      </div>
        <%= form_for @post, html: { multipart: true } do |f| %>
          <% if post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
              <% post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="md-form">
            <%= image_tag(@post.image_url) if @post.image? %><br>
            <div class="text-center">
              <i class="fa fa-camera-retro prefix fa-fonts"></i>
              <%= f.file_field :image %>
            </div>
            <%= f.hidden_field :image_cache %>
          </div>

          <div class="md-form">
            <i class="fa fa-tags prefix white-text"></i>
            <%= f.text_field :title, id: :post_title, placeholder: "Enter title", autofocus: true, class: "form-control white-text" %>
          </div>

          <div class="md-form">
            <i class="fa fa-pencil prefix white-text"></i>
            <%= f.text_area :content, id: :post_content, placeholder: "Enter description", class: "md-textarea white-text" %>
          </div>

          <div class="md-form">
            <%= f.button class: "btn btn-block btn-lg btn-rounded btn-outline-white grey-gradient", data: { disable_with: "<i class='fa fa-spinner fa-5x fa-spin'></i>"} %>
          </div>
        <% end %>

    </div>
  </div>
</div>
