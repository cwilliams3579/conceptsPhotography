<div class="container">
  <div class="row">
    <div class="col">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= @post.content %>
      </p>

      <p>
        <strong>Image:</strong>
        <%= image_tag @post.image_url(:medium) %>
      </p>

      <p>
        <strong>User:</strong>
        <%= @post.user.first_name.capitalize! %>
      </p>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
