                                <!--Caption-->
                            </div>
                            <!--/Third slide-->
                        </div>
                        <!--/Slides-->

                        <!--Controls-->
                        <a class="carousel-control-prev" href="#carousel-example-3" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-3" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <!--/.Controls-->
                    </div>
                    <!--/Carousel Wrapper-->
                </div>
                <!--/First column-->
            </div>
            <!--First row-->

            <div class="divider-new wow fadeIn" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeIn;">
                <h2 class="h2-responsive">What's new?</h2>
            </div>
                    <% Post.all.each do |post| %>
                    <div class="row white-text">

                <!--Grid column-->
                <div class="col-lg-5 ml-auto col-xl-4 pb-3">
                    <!--Featured image-->
                    <div class="view overlay hm-white-slight z-depth-1-half">
                        <% if post.image? %>
                            <%= link_to image_tag post.image_url, class: "image-fluid hm-zoom", style: "width: 100%;" if post.image? %>
                        <% else %>
                            <img src="https://www.pfsuites.com/images/no_image_available.png" class="image-fluid hm-zoom" style="width: 100%;" alt="Empty Image">
                        <% end %>
                        <a>
                            <div class="mask waves-effect waves-light"></div>
                        </a>
                    </div>
                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-lg-7 mr-auto col-xl-6">
                    <!--Excerpt-->
                    <a href="" class="green-text"><h6 class="font-bold pb-1"><i class="fa fa-tags"></i> Food</h6></a>
                    <h4 class="h4-responsive"><strong><%= link_to(post.title, post_path(post)) %></strong></h4>
                    

                    <p><%= truncate(post.content, escape: false, length: 250) %></p>
                    <p>By <a><strong><%= post.user.full_name.titleize %></strong></a>, <%= post.created_at.strftime("%B %d %Y") %> </p>
                    <p class="fa fa-comments-o"> <span class="badge grey-gradient"> <%= post.comments.count %> </span> </p> &nbsp;
                    <p class="fa fa-heart"> <span class="badge grey-gradient"> <%= post.get_upvotes.size %> </span> </p>
                    <div class="center">
                        <%= link_to 'Read More', post_path(post), class: "btn btn-outline-white grey-gradient mb-3 waves-effect waves-ligh" %>
                    </div>
                </div>
                <!--Grid column-->

            </div>




                    
                    <% end %>
                    
       
        </div>
            <!--Pagination dark grey-->
            <div class="center">
                <div class="page_info white-text">
                    <%= page_entries_info @posts %>
                </div>
                 <%= will_paginate @posts %>
            </div> <br> <br>
            <!--/Pagination dark grey-->
	<div class="center">
	   <%= link_to 'New Post', new_post_path, class: "btn btn-outline-white btn-rounded grey-gradient white-text" %>
	</div>
