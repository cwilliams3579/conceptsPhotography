<p id="notice"><%= notice %></p>
<br>
<div class="container">
            <!--First row-->
            <div class="row mt-1">

                <!--First column-->
                <div class="col-md-12">

                    <!--Carousel Wrapper-->
                    <div id="carousel-example-3" class="carousel slide carousel-fade z-depth-1-half" data-ride="carousel">
                        <!--Indicators-->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-3" data-slide-to="0" class=""></li>
                            <li data-target="#carousel-example-3" data-slide-to="1" class="active"></li>
                            <li data-target="#carousel-example-3" data-slide-to="2" class=""></li>
                        </ol>
                        <!--/.Indicators-->

                        <!--Slides-->
                        <div class="carousel-inner" role="listbox">
                            <!--First slide-->
                            <div class="carousel-item">
                                <!--Mask color-->
                                <div class="view hm-black-slight">
                                    <img src="https://s3.amazonaws.com/conceptsphotography/uploads/gallery/images/2/DumboDogWalker.jpg" class="img-fluid" alt="">
                                    <div class="full-bg-img">
                                    </div>
                                </div>
                                <!--Caption-->
                                <div class="carousel-caption caption-2">
                                    <div class="animated fadeInDown">
                                        <h2 class="h2-responsive">Amazing month in Indonesian rainforest</h2>
                                    </div>
                                </div>
                                <!--Caption-->
                            </div>
                            <!--/First slide-->

                            <!--Second slide-->
                            <div class="carousel-item active">
                                <!--Mask color-->
                                <div class="view hm-black-slight">
                                    <img src="https://s3.amazonaws.com/conceptsphotography/uploads/gallery/images/2/BrooklynBridge2.jpg" class="img-fluid" alt="">
                                    <div class="full-bg-img">
                                    </div>
                                </div>
                                <!--Caption-->
                                <div class="carousel-caption caption-2">
                                    <div class="animated fadeInDown">
                                        <h2 class="h2-responsive">autumn bike ride around New York City</h2>
                                    </div>
                                </div>
                                <!--Caption-->
                            </div>
                            <!--/Second slide-->

                            <!--Third slide-->
                            <div class="carousel-item">
                                <!--Mask color-->
                                <div class="view hm-black-slight">
                                    <img src="https://s3.amazonaws.com/conceptsphotography/uploads/gallery/images/2/AtlanticAve.jpg" class="img-fluid" alt="">

                                    <div class="full-bg-img">
                                    </div>
                                </div>
                                <!--Caption-->
                                <div class="carousel-caption caption-2">
                                    <div class="animated fadeInDown">
                                        <h2 class="h2-responsive">Photographs from mountain lake</h2>
                                    </div>
                                </div>
                                <!--Caption-->
                            </div>
                            <!--/Third slide-->
                        </div>
                        <!--/Slides-->

                        <!--Controls-->
                        <a class="carousel-control-prev" href="#carousel-example-3" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-3" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <!--/.Controls-->
                    </div>
                    <!--/Carousel Wrapper-->
                </div>
                <!--/First column-->
            </div>
            <!--First row-->

            <div class="divider-new wow fadeIn" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeIn;">
                <h2 class="h2-responsive">What's new?</h2>
            </div>

           <div class="row">
                    <% Post.all.each do |post| %>
                    <div class="col-lg-4 col-sm-12 mb-1">
                       
                        <!-- Card -->
                        <div class="card card-cascade wider">

                            <!-- Card image -->
                            <div class="view overlay hm-white-slight">
                               <% if post.image? %>
                            <%= link_to image_tag post.image_url, class: "image-fluid hm-zoom", style: "width: 100%;" if post.image? %>
                        <% else %>
                            <img src="https://www.pfsuites.com/images/no_image_available.png" class="image-fluid hm-zoom" style="width: 100%;" alt="Empty Image">
                        <% end %>
                                <a href="#">
                                    <div class="mask waves-light waves-effect waves-light"></div>
                                </a>
                            </div>
                            <!-- /.Card image -->

                            <!-- Card content -->
                            <div class="card-block text-center">
                               
                                <!-- Title -->
                                <h4 class="card-title"><strong><a href=""><%= link_to(post.title, post_path(post), class: "white-text") %></a></strong></h4>

                                <!-- Description -->
                                <p class="card-text white-text">
                                    <%= truncate(post.content, escape: false, length: 250) %>
                                </p>

                                <!-- Card footer -->
                                <div class="card-footer">
                                    <span class="left"></span>
                                    <span class="right">
                                    <%=  link_to '', post, data: {content: 'Quick Look', placement: 'top', trigger: 'hover'}, class: "fa fa-eye  white-text" %>
                                    <%=  link_to '', post, data: {content: 'Like', placement: 'top', trigger: 'hover'}, :class => 'fa fa-thumbs-up white-text' %>
                                    </span>
                                </div>

                            </div>
                            <!-- /.Card content -->

                        </div> <br>
                        <!-- /.Card -->
                        
                    </div> <br>
                    <% end %>
                </div>
        </div>
            <!--Pagination dark grey-->
            <div class="flickr_pagination">
                <div class="page_info">
                    <%#= page_entries_info @posts %>
                </div>
                <%#= will_paginate @posts %>
            </div> <br> <br>
            <!--/Pagination dark grey-->
	<div class="center">
	   <%= link_to 'New Post', new_post_path, class: "btn btn-outline-white btn-rounded grey-gradient white-text" %>
	</div>
